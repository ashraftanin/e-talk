<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Games" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtEtalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="eTalK"
            android:textSize="80sp" >

            <requestFocus />
        </TextView>
        
       <Button
           android:id="@+id/btnHome"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Home"
           android:width="500dp" />

        <Button
            android:id="@+id/btnSpellCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spell Check"
            android:width="500dp" />

        <Button
            android:id="@+id/btnSeekCorrectSentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seek Correct Sentence"
            android:width="500dp" />

        <Button
            android:id="@+id/btnFindCorrectWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Correct Word"
            android:width="500dp" />

    </LinearLayout>

</RelativeLayout>