<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Dailyconversation" >

       <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:layout_alignLeft="@+id/btnDailyConversation"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView1"
            android:text="Home"
            android:width="500dp" />

        <Button
            android:id="@+id/btn_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnHome"
            android:layout_below="@+id/btnHome"
            android:onClick="IntroductionActivity"
            android:text="Introduction"
            android:width="500dp" />

        <Button
            android:id="@+id/btnShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_intro"
            android:onClick="ShoppingActivity"
            android:text="Go to Shopping"
            android:width="500dp" />

        <Button
            android:id="@+id/btn_orderMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnShopping"
            android:layout_below="@+id/btnShopping"
            android:onClick="OrderMealActivity"
            android:text="Order in resturant"
            android:width="500dp" />

</RelativeLayout>